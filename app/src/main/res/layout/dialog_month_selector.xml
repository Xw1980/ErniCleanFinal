<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="16dp">

    <!-- Header con selector de rango de a単os -->
    <LinearLayout
        android:id="@+id/headerYearSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/btnPrevYearRange"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_chevron_left"
            android:contentDescription="A単o anterior"
            android:tint="@color/cyan"/>

        <TextView
            android:id="@+id/tvYearRange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2020-2031"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/cyan"
            android:gravity="center"/>

        <ImageButton
            android:id="@+id/btnNextYearRange"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_chevron_right"
            android:contentDescription="A単o siguiente"
            android:tint="@color/cyan"/>
    </LinearLayout>

    <!-- Grid de a単os -->
    <GridView
        android:id="@+id/gridYears"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:verticalSpacing="8dp"
        android:horizontalSpacing="8dp"
        android:visibility="visible"/>

    <!-- Grid de meses -->
    <GridView
        android:id="@+id/gridMonths"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:verticalSpacing="8dp"
        android:horizontalSpacing="8dp"
        android:visibility="gone"/>

</LinearLayout> 