<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="4dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_gravity="center_horizontal"
    android:layout_weight="0.9"
    tools:context=".MainActivity">

    <!-- Bloque cyan cuadrado con bordes redondeados -->
    <LinearLayout
        android:layout_width="68dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/left_cyan_rounded">

        <TextView
            android:id="@+id/dayOfWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAR"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="normal"
            android:textAllCaps="true"
            android:paddingTop="8dp"
            android:paddingBottom="0dp" />

        <TextView
            android:id="@+id/dayNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="-2dp"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <!-- Espacio en blanco entre el bloque cyan y el recuadro blanco -->
    <Space
        android:layout_width="8dp"
        android:layout_height="match_parent" />

    <!-- Recuadro blanco con borde negro a la derecha, más angosto -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/bordered_background"
        android:padding="6dp"
        android:gravity="top|start">

        <TextView
            android:id="@+id/clientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUAN PÉREZ"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="normal"
            android:textAllCaps="true"
            android:paddingBottom="0dp" />

        <TextView
            android:id="@+id/clientPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="555-0123"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginTop="0dp"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/clientAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALLE PRINCIPAL 123"
            android:textColor="#888888"
            android:textSize="12sp"
            android:layout_marginTop="0dp"
            android:textAllCaps="true" />

        <TextView
            android:id="@+id/serviceType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TIPO DE SERVICIO"
            android:textColor="#00BCD4"
            android:textSize="10sp"
            android:textStyle="normal"
            android:layout_marginTop="2dp"
            android:textAllCaps="true" />

        <!-- Botón de posponer -->
        <LinearLayout
            android:id="@+id/btnPostpone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end|bottom"
            android:layout_gravity="end|bottom"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="2dp">

            <ImageView
                android:id="@+id/iconPostpone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_clock"
                android:tint="#00BCD4"
                android:contentDescription="Posponer cita" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Posponer"
                android:textColor="#00BCD4"
                android:textSize="10sp"
                android:textStyle="bold"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout> 